{
  "name": "pantheon-systems/cli",
  "description": "A command line interface for Pantheon",
  "keywords": [ "cli", "pantheon", "terminus", "drupal", "wordpress" ],
  "homepage": "http://getpantheon.com",
  "license": "MIT",
  "bin": [
    "bin/terminus.bat", "bin/terminus"
  ],
  "require": {
    "php": ">=5.3.2",
    "guzzle/guzzle": "3.9.*@stable",
    "jlogsdon/cli": "~0.9.4",
    "mustache/mustache": "~2.4",
    "nb/oxymel": "0.1.0",
    "psy/psysh": "@stable",
    "ramsey/array_column": "~1.1",
    "rmccue/requests": "~1.6",
    "symfony/finder": "~2.7",
    "symfony/process": "2.7.*@dev",
    "symfony/dom-crawler": "2.7.*",
    "symfony/css-selector": "2.7.*",
    "vlucas/phpdotenv": "2.0.*@stable",
    "katzgrau/klogger": "dev-master",
    "philasearch/i18n": "1.0.*"
  },
  "autoload": {
    "psr-0": { "Terminus": "php" },
    "files": [ "php/Spyc.php" ],
    "classmap": [ "php/export" ]
  },
  "require-dev": {
    "behat/behat": "2.5.*@stable",
    "phpunit/phpunit": "~4.6",
    "php-vcr/php-vcr": "~1.2",
    "php-vcr/phpunit-testlistener-vcr": "*",
    "sebastian/phpcpd": "*",
    "squizlabs/php_codesniffer": "2.*"
  }
}
