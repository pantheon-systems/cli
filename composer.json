{
  "name": "pantheon-systems/terminus",
  "description": "A command line interface for Pantheon",
  "keywords": [ "cli", "pantheon", "terminus", "drupal", "wordpress" ],
  "homepage": "http://getpantheon.com",
  "license": "MIT",
  "bin": [
    "bin/terminus.bat", "bin/terminus"
  ],
  "require": {
    "php": ">=5.5.9",
    "guzzlehttp/guzzle": "6.1.*@stable",
    "jlogsdon/cli": "~0.9.4",
    "katzgrau/klogger": "1.2.*@stable",
    "psy/psysh": "@stable",
    "ramsey/array_column": "~1.1",
    "rmccue/requests": "^1.6",
    "symfony/finder": "~2.7|~3.0",
    "symfony/yaml": "~2.1|~3.0",
    "twig/twig": "1.*",
    "vlucas/phpdotenv": "~2.1"
  },
  "autoload": {
    "psr-0": { "Terminus": "php" }
  },
  "require-dev": {
    "behat/behat": "3.0.*@stable",
    "phpunit/phpcov": "3.*",
    "phpunit/phpunit": "5.*",
    "php-vcr/php-vcr": "~1.2",
    "php-vcr/phpunit-testlistener-vcr": "*",
    "sebastian/phpcpd": "*",
    "squizlabs/php_codesniffer": "2.*",
    "satooshi/php-coveralls": "~1.0"
  },
  "extra": {
    "branch-alias": {
        "dev-master": "0.0.x-dev"
    }
  }
}
